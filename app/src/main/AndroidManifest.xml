<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demotxt.myapp.myapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.OverwatchStatsShow"
            android:parentActivityName=".activities.OverwatchStatsTransfer"></activity>
        <activity android:name=".activities.OverwatchStatsTransfer"
            android:parentActivityName=".activities.StatsChooser"/>
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.PopularNewsActivity" />
        <activity
            android:name=".activities.PopularNewsShow"
            android:parentActivityName=".activities.NewsChooser" />
        <activity
            android:name=".activities.OSUStatsShow"
            android:parentActivityName=".activities.OSUStatsTransfer" />
        <activity
            android:name=".activities.OSUStatsTransfer"
            android:parentActivityName=".activities.StatsChooser" />
        <activity
            android:name=".activities.FortniteStatsShow"
            android:parentActivityName=".activities.FortniteStatsTransfer" />
        <activity
            android:name=".activities.FortniteStatsTransfer"
            android:parentActivityName=".activities.StatsChooser" />
        <activity android:name=".activities.StatsChooser" />
        <activity
            android:name=".activities.FortniteNewsShow"
            android:parentActivityName=".activities.NewsChooser" />
        <activity android:name=".activities.NewsChooser" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.FortniteNewsActivity" />
    </application>

</manifest>